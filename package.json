{
  "name": "emoji-today-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "lib/*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "emoji": "turbo run dev --filter=smileat.emoji.today",
    "emoji:build": "turbo run build --filter=smileat.emoji.today",
    "emoji:cleanup": "turbo run cleanup --filter=smileat.emoji.today"
  },
  "devDependencies": {
    "@types/range-parser": "^1.2.7",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "node-vibrant": "4.0.3"
  }
}
